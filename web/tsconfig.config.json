{
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "vite.config.*", "vitest.config.*", "cypress.config.*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "downlevelIteration": true,
  }
}
