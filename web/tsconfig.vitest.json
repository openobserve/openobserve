{
  "extends": "./tsconfig.app.json",
  "include": ["src/**/*.spec.{ts,js}", "vitest.config.*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
