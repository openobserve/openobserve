{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug OpenObserve",
      "program": "${workspaceFolder}/target/debug/openobserve",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "RUST_LOG",
          "value": "debug"
        },
        {
          "name": "RUST_BACKTRACE",
          "value": "1"
        }
      ],
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "sourceLanguages": ["rust"],
      "preLaunchTask": "rust: cargo build (debug)"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug OpenObserve (Cargo)",
      "cargo": {
        "args": ["build", "--bin=openobserve"],
        "filter": {
          "name": "openobserve",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "RUST_LOG",
          "value": "debug"
        },
        {
          "name": "RUST_BACKTRACE",
          "value": "1"
        }
      ],
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach to Process",
      "pid": "${command:pickProcess}",
      "sourceLanguages": ["rust"]
    }
  ]
}
