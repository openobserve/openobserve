        "args": ["build", "--bin=openobserve", "--package=openobserve"],
        "filter": {
          "name": "openobserve",
          "kind": "bin"
        }
      },
      "env": {
        "ZO_ROOT_USER_EMAIL": "root@example.com",
        "ZO_ROOT_USER_PASSWORD": "Complexpass#123",
